{
  "name": "gspend",
  "version": "0.7.0",
  "description": "See what you've actually spent on GCP",
  "type": "module",
  "bin": {
    "gspend": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "gcp",
    "google-cloud",
    "cost",
    "billing",
    "cli",
    "devtools"
  ],
  "author": {
    "name": "Franz Mulkatz",
    "url": "https://github.com/mulkatz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mulkatz/gspend.git"
  },
  "homepage": "https://github.com/mulkatz/gspend#readme",
  "bugs": {
    "url": "https://github.com/mulkatz/gspend/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@google-cloud/bigquery": "^8.1.1",
    "@google-cloud/billing": "^5.1.1",
    "@google-cloud/billing-budgets": "^6.1.1",
    "@google-cloud/resource-manager": "^6.2.1",
    "@inkjs/ui": "^2.0.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "env-paths": "^4.0.0",
    "google-auth-library": "^10.6.1",
    "ink": "^6.8.0",
    "ora": "^9.3.0",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.2",
    "@types/react": "^19.2.14",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
